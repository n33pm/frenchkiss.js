{
    "name": "frenchkiss.ts",
    "version": "0.3.0",
    "description": "The blazing fast lightweight translation module for javascript",
    "author": "Patrick Malleier <github@numero33.com>",
    "license": "MIT",
    "main": "./dist/frenchkiss.cjs.js",
    "module": "./dist/frenchkiss.esm.js",
    "typings": "dist/index.d.ts",
    "browser": {
        "./dist/frenchkiss.cjs.js": "./dist/frenchkiss.umd.js"
    },
    "files": [
        "dist"
    ],
    "bugs": {
        "url": "https://github.com/numero33/frenchkiss.ts/issues"
    },
    "repository": "github:numero33/frenchkiss.ts",
    "scripts": {
        "start": "cross-env ENVIRONMENT=DEV rollup -c --watch",
        "lint": "eslint src/ test/",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build": "npm run update-license && rollup -c && npm run update-filesize",
        "update-license": "node utils/update-license.js",
        "update-filesize": "node utils/update-size.js"
    },
    "keywords": [
        "frenchkiss.ts",
        "frenchkiss",
        "french-kiss",
        "french kiss",
        "i18n",
        "l10n",
        "internationalization",
        "internationalisation",
        "translate",
        "translation",
        "interpolation",
        "language"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "size-limit": [
        {
            "path": "dist/frenchkiss.umd.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/frenchkiss.cjs.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/frenchkiss.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-app": "^7.0.8",
        "@size-limit/preset-small-lib": "^7.0.8",
        "@types/jest": "^28.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^5.12.1",
        "eslint-config-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "rollup": "^1.1.2",
        "rollup-plugin-size-snapshot": "^0.11.0",
        "rollup-plugin-terser": "^4.0.3",
        "rollup-plugin-typescript2": "^0.32.0",
        "size-limit": "^7.0.8",
        "ts-jest": "^28.0.3",
        "tslib": "^2.4.0",
        "typescript": "^4.7.2"
    }
}
