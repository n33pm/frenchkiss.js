{
    "name": "frenchkiss.ts",
    "version": "0.3.2",
    "description": "The blazing fast lightweight translation module for javascript",
    "author": "Patrick Malleier <github@numero33.com>",
    "license": "MIT",
    "main": "./dist/index.js",
    "files": [
        "dist",
        "src"
    ],
    "bugs": {
        "url": "https://github.com/numero33/frenchkiss.ts/issues"
    },
    "repository": "github:numero33/frenchkiss.ts",
    "scripts": {
        "start": "tsc --watch",
        "build": "tsc",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/",
        "prepare": "pnpm build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "keywords": [
        "frenchkiss.ts",
        "frenchkiss",
        "french-kiss",
        "french kiss",
        "i18n",
        "l10n",
        "internationalization",
        "internationalisation",
        "translate",
        "translation",
        "interpolation",
        "language"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "pnpm lint"
        }
    },
    "size-limit": [
        {
            "path": "dist/frenchkiss.umd.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/frenchkiss.cjs.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/frenchkiss.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^8.1.0",
        "@testing-library/react": "^14.0.0",
        "@total-typescript/ts-reset": "^0.4.2",
        "@types/jest": "^29.2.1",
        "@types/react": "^18.2.17",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "eslint": "^8.26.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.1",
        "jest": "^29.2.2",
        "jest-environment-jsdom": "^29.6.2",
        "prettier": "^3.0.0",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "size-limit": "^8.1.0",
        "ts-jest": "^29.0.3",
        "typescript": "^5.1.6"
    }
}
